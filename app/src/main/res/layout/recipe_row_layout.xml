<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="result"
            type="com.example.foody.models.food_recipe.Result" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recipeRowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        onRecipeClickListener="@{result}"
        android:padding="8dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/row_cardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/lightMediumGray"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/recipeImageView"
                    android:layout_width="150dp"
                    android:layout_height="160dp"
                    android:contentDescription="@string/recipe_image"
                    loadImageFromUrl="@{result.image}"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:justifyContent="space_between"
                    app:flexDirection="column"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/titleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/courgette"
                        android:maxLines="1"
                        android:text="@{result.title}"
                        android:textColor="@color/darker"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/descriptionTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="3"
                        parseHtml="@{result.summary}"
                        android:textColor="@color/darkGray" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/heartTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            setNumberOfLikes="@{result.aggregateLikes}"
                            android:textColor="@color/red"
                            app:drawableTint="@color/red"
                            app:drawableTopCompat="@drawable/ic_heart"
                            android:layout_marginEnd="12dp"
                            tools:ignore="TextContrastCheck" />

                        <TextView
                            android:id="@+id/clockTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            setNumberOfMinutes="@{result.readyInMinutes}"
                            android:textColor="@color/yellow"
                            app:drawableTint="@color/yellow"
                            app:drawableTopCompat="@drawable/ic_clock"
                            android:layout_marginEnd="12dp"
                            tools:ignore="TextContrastCheck" />

                        <TextView
                            android:id="@+id/leafTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            applyVeganColor="@{result.vegan}"
                            android:text="@string/vegan"
                            android:textColor="@color/mediumGray"
                            app:drawableTint="@color/mediumGray"
                            app:drawableTopCompat="@drawable/ic_leaf"
                            tools:ignore="TextContrastCheck" />
                    </LinearLayout>

                </com.google.android.flexbox.FlexboxLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>